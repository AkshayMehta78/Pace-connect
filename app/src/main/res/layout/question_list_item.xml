<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingBottom="12dp"
    android:paddingLeft="20sp"
    android:paddingRight="20sp"
    android:paddingTop="20sp"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/text_question_string"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:textColor="@color/black_87"
        android:textSize="@dimen/text_size_18"
        tools:text="What is your questionString?" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/likedStatusLayout"
        android:layout_below="@+id/text_question_string"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/likedStatusImageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_not_liked" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/statusTextView"
            android:text="Liked" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_question_time_stamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_alignBottom="@+id/likedStatusLayout"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/text_question_string"
        tools:text="Submitted: 1 Jan 2015" />

</RelativeLayout>